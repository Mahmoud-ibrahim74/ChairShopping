@using ChairShopping.Data;
@using Microsoft.AspNetCore.Identity
@using ChairShopping.Interfaces;
@inject IAdmin _data;
@inject ICart _cart;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home";
    Layout = "CssScripts";
    var allCteg = await _data.GetCategoriesLimitAsync(5);
    var allProd = _data.GetAllProducts().Result.Count();
    var user_order = await _cart.GetCartById(UserManager.GetUserId(User));

}

<!DOCTYPE html>
<html lang="en">

<body>
    <!-- Spinner Start -->
    @* 	<div id="spinner"
    class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
    <span class="sr-only">Loading...</span>
    </div>
    </div> *@
    <!-- Spinner End -->
     	<!-- Start Header/Navigation -->
    <!-- Header -->
    <header>
        <!-- Header desktop -->
        <div class="container-menu-desktop">
            <div class="wrap-menu-desktop">
                <nav class="limiter-menu-desktop container">

                    <!-- Logo desktop -->
                    <a asp-action="index" asp-controller="Home" class="logo">
                        <img src="~/images/icons/logo-01.png" alt="IMG-LOGO">
                    </a>


                    <!-- Menu desktop -->
                    <div class="menu-desktop">
                        <ul class="main-menu">
                            <li class="active-menu">
                                <a asp-action="index" asp-controller="Home">Home</a>
                            </li>

                            <li>
                                <a href="product.html">Shop</a>
                            </li>

                            <li class="label1" data-label1="hot">
                                <a href="shoping-cart.html">Features</a>
                            </li>

                            <li>
                                <a href="blog.html">Blog</a>
                            </li>

                            <li>
                                <a href="about.html">About</a>
                            </li>
                            <li>
                                <a href="contact.html">Contact</a>
                            </li>
                            @if (User.IsInRole("Admin"))  // check if user type is an admin
                            {
                                <li>
                                    <a asp-action="index" asp-controller="Dashboard">Dashboard</a>
                                </li>
                            }
                            <li>
                                <div class="dropdown-content">
                                    <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @User.Identity.Name
                                        <span class="sr-only">Toggle Dropdown</span>
                                        <i class="zmdi zmdi-accounts"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">
                                            Account Settings
                                            <i class="zmdi zmdi-account-circle"></i>
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <partial name="_LoginPartial" />
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <!-- Icon header -->
                    <div class="wrap-icon-header flex-w flex-r-m">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                            <i class="zmdi zmdi-search"></i>
                        </div>

                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="@user_order.Count">
                            <i class="zmdi zmdi-shopping-cart"></i>
                        </div>

                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-favourite" data-notify="@user_order.Count">
                            <i class="zmdi zmdi-favorite-outline"></i>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <!-- Header Mobile -->
        <div class="wrap-header-mobile">
            <!-- Logo moblie -->
            <a asp-action="index" asp-controller="Home" class="logo">
                <img src="~/images/icons/logo-01.png" alt="IMG-LOGO">
            </a>

            <!-- Icon header -->
            <div class="wrap-icon-header flex-w flex-r-m m-r-15">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
                    <i class="zmdi zmdi-search"></i>
                </div>

                <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart" data-notify="2">
                    <i class="zmdi zmdi-shopping-cart"></i>
                </div>

                <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart" data-notify="0">
                    <i class="zmdi zmdi-favorite-outline"></i>
                </div>
            </div>

            <!-- Button show menu -->
            <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </div>
        </div>


        <!-- Menu Mobile -->
        <div class="menu-mobile">


            <ul class="main-menu-m">
                <li>
                    <a asp-action="index" asp-controller="Home">Home</a>
                </li>

                <li>
                    <a href="product.html">Shop</a>
                </li>

                <li>
                    <a href="shoping-cart.html" class="label1 rs1" data-label1="hot">Features</a>
                </li>

                <li>
                    <a href="blog.html">Blog</a>
                </li>

                <li>
                    <a href="about.html">About</a>
                </li>

                <li>
                    <a href="contact.html">Contact</a>
                </li>
                @if (User.IsInRole("Admin"))  // check if user type is an admin
                {
                    <li>
                        <a asp-action="index" asp-controller="Dashboard">Dashboard</a>
                    </li>
                }
                <li>
                    <div class="dropdown-content">
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @User.Identity.Name
                            <span class="sr-only">Toggle Dropdown</span>
                            <i class="zmdi zmdi-accounts"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">
                                Account Settings
                                <i class="zmdi zmdi-account-circle"></i>
                            </a>
                            <div class="dropdown-divider"></div>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </li>

            </ul>
        </div>

        <!-- Modal Search -->
        <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
            <div class="container-search-header">
                <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                    <img src="~/images/icons/icon-close2.png" alt="CLOSE">
                </button>
                    <button class="flex-c-m trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>
                    <input class="plh3" type="text" name="search" placeholder="Search...">
            </div>
        </div>
    </header>

    <!-- Cart -->
    <div class="wrap-header-cart js-panel-cart">
        <div class="s-full js-hide-cart"></div>

        <div class="header-cart flex-col-l p-l-65 p-r-25">
            <div class="header-cart-title flex-w flex-sb-m p-b-8">
                <span class="mtext-103 cl2">
                    Your Cart
                </span>

                <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
                    <i class="zmdi zmdi-close"></i>
                </div>
            </div>

            <div class="header-cart-content flex-w js-pscroll">
                <ul class="header-cart-wrapitem w-full">
                    @if (user_order != null)
                    {
                        foreach (var items in user_order)
                        {
                            var get_product = _data.GetProductById(items.ProductId).Result;

                            <li class="header-cart-item flex-w flex-t m-b-12">
                                    <div class="header-cart-item-img">
                                        <img src="~/asset/images/@get_product.Image" alt="IMG">
                                    </div>

                                <div class="header-cart-item-txt p-t-8">
                                        <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                                            @get_product.ProductName
                                        </a>
                                    <span class="header-cart-item-info">
                                        @items.Quantity x @items.Price$
                                    </span>
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        <li> Cart is Empty</li>
                    }

                </ul>

                <div class="w-full">
                    <div class="header-cart-total w-full p-tb-40">
                        Total: @_cart.TotalOrderPrice(UserManager.GetUserId(User)).Result $
                    </div>

                    <div class="header-cart-buttons flex-w w-full">
                        <a asp-action="GetCartById" target="_blank" asp-controller="Cart" asp-route-Id="@UserManager.GetUserId(User)" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                            View Cart
                        </a>

                        <a href="shoping-cart.html" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                            Check Out
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/main.js"></script>

</body>







</html>
