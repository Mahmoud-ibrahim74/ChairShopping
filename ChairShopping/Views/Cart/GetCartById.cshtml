@model OrderViewModel
@{
    Layout=("CssScripts");
}
<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <form class="col-md-12" asp-action="GetCartById" asp-controller="Cart" method="get">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="product-thumbnail">Image</th>
                                <th class="product-name">Product</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-total">Total</th>
                                <th class="product-remove">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.UserOrder == true)
                            {                           
                                <h4 style="color:red; display:flex;align-items:center;justify-content:center ">You have no order yet!!!!</h4>
                            }
                            @if (ViewBag.Orders !=null)
                            {
                                @foreach (var item in ViewBag.Orders)
                                {
                                    <tr>
                                        <td class="product-thumbnail">
                                            <img src="~/asset/images/@item.Product.Image" alt="Image" class="img-fluid">
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@item.Product.ProductName</h2>
                                        </td>
                                        <td>
                                            <h2 class="h5 text-black">$@item.Product.Price</h2>
                                        </td>
                                        <td>
                                            <h2 class="h5 text-black">@item.Quantity</h2>
                                        </td>
                                        <td>
                                            <h2 class="h5 text-black">$@item.TotalPrice</h2>
                                        </td>
                                        <td><a asp-action="RemoveOrder" asp-controller="Cart" asp-route-id="@item.Id" class="btn btn-black btn-sm">X</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="row mb-5">
                    <div class="col-md-6 mb-3 mb-md-0">
@*                         <button class="btn btn-success btn-sm btn-block">Update Cart</button>
 *@                        <a href="#" class="btn btn-outline-success btn-sm btn-block">Update Cart</a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success btn-sm btn-block">Continue Shopping</a>
                    </div>
                </div>
                <!--Coupons-->
                <div class="row">
                    <div class="col-md-12">
                        <label class="text-black h4" for="coupon">Coupon</label>
                        <p>Enter your coupon code if you have one.</p>
                    </div>
                    <div class="col-md-8 mb-3 mb-md-0">
                        <input type="text" class="form-control py-3" id="coupon" placeholder="Coupon Code">
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-outline-success btn-block">Apply Coupon</button>
                    </div>
                </div>

                <!--Coupons-->
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success btn-lg btn-block m-5">Back</a>
            </div>
            <div class="col-md-6 pl-5">
                <div class="row justify-content-end">
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-md-12 text-right border-bottom mb-5">
                                <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <span class="text-black">Subtotal</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">@ViewBag.Total</strong>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <span class="text-black">Total</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">@ViewBag.Total</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <a asp-action="Index" asp-controller="PlaceOrder" class="btn btn-success btn-lg py-3 btn-success">Proceed To Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

